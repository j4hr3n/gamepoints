{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "esModuleInterop": true,
        "paths": {
            "@components/*": ["./src/components/*"],
            "@assets/*": ["./src/assets/*"],
            "@config/*": ["./src/config/*"],
            "@reducers/*": ["./src/reducers/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "include": ["./src/**/*", "./src/typings/**/*"]
}
